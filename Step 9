package week3CodingAssignmentStep9;

public class Week3CodingAssignmemtStep9 {

	public static void main(String[] args) {

		int[] numbers = { 3, 6, 2, 9, 10, 3, 9, 16, 22, 20, 7, 6 };
		boolean sumLargerThanHundred = false;

		/*
		 * Week 3 Coding Assignment Step 9: Method that takes an array of int and
		 * returns true if the sum of all the ints in the array is greater than 100.
		 * 
		 */

		int sum = 0;
		for (int number : numbers) {
			sum += number;
			System.out.println("After adding the next integer in the array, the sum is: " + sum);
		}
		if (sum > 100) {
			sumLargerThanHundred = true;
			System.out.println();
			System.out.println(
					sumLargerThanHundred + ": the sum of " + sum + " (all integers in the array) is greater than 100.");

		} else {
			sumLargerThanHundred = false;
			System.out.println();
			System.out.println(sumLargerThanHundred + ": the sum of all integers in the array is less than 100.");

		}
	}
}
