package week3CodingAssignmentStep13;

public class Week3CodingAssignmentStep13 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		String[] family = { "Jeff", "Mike", "Mom", "Dad" };
		String[] gifts = { "Scratch Ticket", "New bicycle", "Perfume Set", "New Tie" };

		int i = 0;

		for (i = 0; i < 4; i++) {
			System.out.println(family[i] + "'s Christmas gift is a " + gifts[i] + ".");
		}
	}

}
